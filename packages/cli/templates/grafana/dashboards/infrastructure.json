  "panels": [
    {
      "title": "Process CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "process_cpu_usage * 100",
          "legendFormat": "Process CPU %",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "system_cpu_usage * 100",
          "legendFormat": "System CPU %",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Heap used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
          "legendFormat": "Non-heap used",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Heap max",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "title": "Disk Space",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "disk_free_bytes / disk_total_bytes * 100",
          "legendFormat": "Free %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "green", "value": 50 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Open File Descriptors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "process_files_open_files",
          "legendFormat": "Open FDs",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "process_files_max_files",
          "legendFormat": "Max FDs",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "blissful-prometheus" },
          "expr": "process_uptime_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
